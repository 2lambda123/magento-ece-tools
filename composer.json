{
  "name": "magento/ece-tools",
  "description": "Provides tools to build and deploy Magento 2 Enterprise Edition",
  "version": "2002.0",
  "license": [
      "OSL-3.0",
      "AFL-3.0"
  ],
  "require": {
    "php": ">=5.6.0",
    "monolog/monolog": "^1.17"
  },
  "require-dev": {
    "phpunit/phpunit": "4.1",
    "squizlabs/php_codesniffer": " ^3.0"
  },
  "bin":[
    "m2-ece-build", "m2-ece-deploy", "m2-ece-scd-dump"
  ],
  "autoload": {
    "psr-4": {
      "Magento\\": "src/Magento/"
    }
  },
  "scripts": {
    "test": [
      "phpunit -c phpunit.xml.dist",
      "phpcs src --standard=ruleset.xml"
    ]
  }
}
